{
    "name": "atelierspierrot/internationalization",
    "type": "library",
    "description": "A PHP package to manage i18n: translations, pluralizations and date formats according to a localization.",
    "keywords": [ "i18n", "internationalization", "localization" ],
    "homepage": "http://github.com/atelierspierrot/internationalization",
    "version": "1.0.2",
    "license": "GPL-3.0",
    "authors": [{
        "name": "Les Ateliers Pierrot & contributors",
        "email": "contact@ateliers-pierrot.fr",
        "homepage": "http://www.ateliers-pierrot.fr/"
    },{
        "name": "Pierre Cassat",
        "email": "piero.wbmstr@gmail.com",
        "homepage": "https://github.com/PieroWbmstr"
    }],
    "require": {
        "php": ">=5.3.0",
        "atelierspierrot/patterns": "dev-master"
    },
    "require-dev": {
        "twig/twig": "1.*",
        "twig/extensions": "dev-master",
        "sami/sami": "dev-master",
        "phpmd/phpmd" : "1.4.*"
    },
    "autoload": { 
        "psr-0": {  "I18n": "src" },
        "files": [ "src/I18n/aliases.php" ]
    },
    "extra": {
        "views-functions": "src/I18n/aliases.php"
    }
}
